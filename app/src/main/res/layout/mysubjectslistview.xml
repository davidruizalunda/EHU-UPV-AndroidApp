<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/horaInicioAsignaturaPreferencias_textView"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:text="00:00"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/abreviaturaAsignaturaPreferencias_textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ISO" />

            <LinearLayout
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/aulaAsignaturaPreferencias_textView"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:text="TextView"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/horaFinAsignaturaPreferencias_textView"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:text="00:00"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>