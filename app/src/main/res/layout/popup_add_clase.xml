<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="48dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:background="@drawable/basic_layout"
    >

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="334dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seleccionClase_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seleccion_actual"
                android:textColor="@color/gray_500"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seleccionActualClase_textView"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/horaComienzoClase"
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/HoraInicio"
                android:textColor="@color/gray_500"
                android:textStyle="bold" />

            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/spinnerAsignaturasClase"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/listaAsignaturas"
                android:textColor="@color/gray_500"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/horaInicioClase_editTextTime"
                android:layout_width="89dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:background="@drawable/basic_textview"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/HoraDefault"
                android:inputType="time"
                android:textColorHint="@color/gray_300"
                android:textColor="@color/gray_400"
                android:textSize="12sp" />

            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <Spinner
                android:id="@+id/spinner11"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/horaFinClase"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/HoraFin"
                android:textColor="@color/gray_500"
                android:textStyle="bold" />

            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/donde"
                android:textColor="@color/gray_500"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/spinnerDiasClase"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dia"
                android:textColor="@color/gray_500"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/horaFinClase_editTextTime"
                android:layout_width="304dp"
                android:layout_height="31dp"

                android:layout_weight="1"
                android:background="@drawable/basic_textview"
                android:ems="10"
                android:gravity="center"
                android:hint="00:00"
                android:inputType="time"
                android:textColorHint="@color/gray_300"
                android:textColor="@color/gray_400"
                android:textSize="12sp" />

            <Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/dondeClase_editText"
                android:layout_width="298dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:background="@drawable/basic_textview"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textColorHint="@color/gray_300"
                android:textColor="@color/gray_400"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="446dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="8dp"
                android:background="@drawable/basic_layout2"
                >

                <TextView
                    android:id="@+id/textlistaClasesClase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    tools:text="@string/listaClases"
                    android:layout_marginLeft="3dp"/>

                <Spinner
                    android:id="@+id/spinnerlistaClasesClase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/emptyClase_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_button"
                    android:layout_marginBottom="6dp"
                    android:textSize="12sp"
                    android:textColor="@color/gray_500"
                    android:background="@drawable/basic_button2"
                    />

                <Button
                    android:id="@+id/removeClase_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/gray_500"
                    android:background="@drawable/basic_button2"
                    android:text="@string/remove_button" />

                <Button
                    android:id="@+id/addClase_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_500"
                    android:background="@drawable/basic_button2"
                    android:text="@string/add_button" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>